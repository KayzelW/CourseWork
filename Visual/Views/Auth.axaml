<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:user="clr-namespace:Visual.ViewModels"
             mc:Ignorable="d" Width="400" Height="230"
             x:Class="Visual.Views.Auth"
			 x:DataType="user:UserAuthViewModel">
	<UserControl.DataContext>
		<user:UserAuthViewModel/>
	</UserControl.DataContext>
	
	<StackPanel Orientation="Vertical" Width="150" VerticalAlignment="Center">
		<TextBlock Text="Авторизация" FontSize="20" TextAlignment="Center"/>
		<StackPanel>
			<TextBox Name="loginTextBox" Text="{Binding UserLogin}" Watermark="Логин"/>
		</StackPanel>
		<StackPanel>
			<TextBox Name="passwordTextBox" Text="{Binding UserPassword}" PasswordChar="*" Watermark="Пароль"/>
		</StackPanel>
		<Button Content="Войти" ClickMode="Press" Click="AuthButton_Click" Margin="0 10 0 0" HorizontalAlignment="Center"/>
	</StackPanel>
</UserControl>
