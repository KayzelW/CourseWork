<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:models="clr-namespace:Visual.ViewModels"
			 xmlns:bookCl="clr-namespace:Classes;assembly=Classes"
             mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="200"
             x:Class="Visual.Views.BookView"
			 x:DataType="bookCl:Book">
	<UserControl.DataContext>
		<bookCl:Book/>
	</UserControl.DataContext>
	<StackPanel Orientation="Horizontal">
		<Image Name="imageBox_"/>
		<StackPanel Orientation="Vertical" Margin="5">
			<TextBox Text="{Binding Name}"/>
			<TextBlock Text="{Binding Author.Name}"/>
			<TextBlock Text="{Binding Price}" Height="20"/>
			<TextBlock Text="{Binding Amount}" Height="20"/>
		</StackPanel>
	</StackPanel>
</UserControl>
